{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    }
  },
  "Certificate": {
    "ProviderType": "RithmAuthority",
    "ValidateExpiration": true,
    "ValidateChain": true,
    "TrustedCaCommonName": "RithmXO Service Identity CA"
  },
  "MutualTLS": {
    "Enabled": true,
    "RequireClientCertificate": true
  },
  "InfraSoT": {
    "EnableRegistration": true,
    "AppId": "rithm-template-service",
    "Version": "1.0.0",
    "Environment": "production",
    "FailFastOnStartup": true,
    "EnableCaching": true,
    "CacheTtlMinutes": 5
  },
  "OpenTelemetry": {
    "Enabled": true,
    "ServiceName": "rithm-template-service",
    "ServiceVersion": "1.0.0",
    "OtlpExporterEndpoint": "http://observability-collector.rithmxo.internal:4317"
  },
  "PolicyEngine": {
    "Enabled": true,
    "CacheTtlSeconds": 60,
    "TimeoutSeconds": 5,
    "Retry": {
      "MaxRetries": 3,
      "InitialDelayMs": 100,
      "MaxDelayMs": 2000
    }
  },
  "AuditAuthority": {
    "Enabled": true,
    "TimeoutSeconds": 5,
    "FailOnAuditError": true,
    "Retry": {
      "MaxRetries": 3,
      "InitialDelayMs": 100,
      "MaxDelayMs": 2000
    }
  },
  "DistributedState": {
    "OperationContextTtlHours": 24,
    "OperationResultTtlHours": 24,
    "OperationLockTtlSeconds": 30,
    "HeartbeatIntervalSeconds": 10,
    "OrphanThresholdMinutes": 5
  },
  "Idempotency": {
    "CacheTtlHours": 24,
    "LockTtlSeconds": 30,
    "MaxKeyLength": 255,
    "MaxResponseSizeMB": 5
  },
  "RithmModules": {
    "Core": {
      "BatchProcessing": {
        "Enabled": true
      }
    },
    "Security": {
      "Authorization": {
        "Enabled": true
      },
      "Audit": {
        "Enabled": true
      },
      "MutualTLS": {
        "Enabled": true
      }
    },
    "Infrastructure": {
      "ServiceDiscovery": {
        "Enabled": true
      },
      "SignalR": {
        "Enabled": true
      },
      "ServiceRouter": {
        "Enabled": true
      }
    }
  }
}
